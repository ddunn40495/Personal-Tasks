<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <h1> Events</h1>
    <a href="/events/new">new events</a>
        <div class="container">

            <div class="row">

                <% for(let i = 0; i < events.length; i++){ %>

                    <div class="col">
                        <h3><%= events[i].name %></h3>

                        <a href="/events/<%= events[i]._id %>"><%= events[i].name %></a>
                        <h3><%= events[i].date %></h3>
                        <h3><%= events[i].category %></h3>
                        

                        <a href="/events/<%= events[i]._id %>/edit">EDIT</a>
                        <form action="/events/<%=events[i]._id%>?_method=DELETE" method="POST">
                            <input type="submit" value="DELETE"/>
                        </form>

                    </div>
                <% } %>
            </div>
        </div>
    <footer>
        <%- include ('../partials/footer.ejs') %>
    </footer>
</body>
</html>