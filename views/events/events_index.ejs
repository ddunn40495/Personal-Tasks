<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <a href="/events" class="waves-effect waves-light btn"><i class="material-icons left">home</i>Events</a>
    <a href="/tasks" class="waves-effect waves-light btn"><i class="material-icons left">home</i>Tasks</a>
        <div class="container">

            <div class="card blue-grey darken-1 headline">
                <div class="card-content white-text">
                  
                    <h1 class="white-text"> Events</h1>
                    <a class="waves-effect waves-light btn-large" href="/events/new">new events</a>
                </div>
                
              </div>

           
            <div class="row">

                <% for(let i = 0; i < events.length; i++){ %>

                    <div class="col s6 m3">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                             <span class="card-title"><%= events[i].name %></span>
                             <a href="/events/<%= events[i].id %>" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
                            <h3><%= events[i].category %></h3>
                            <% events[i].category %>
                              <p><%= events[i].date %></p>
                            </div>
                            <div class="card-action">
                             
                                <a class="waves-effect waves-light btn-small" href="/events/<%= events[i]._id %>/edit">EDIT</a>
                                <form action="/events/<%=events[i]._id%>?_method=DELETE" method="POST">
                                    <button class="waves-effect waves-light btn-small" type="submit" value="DELETE">DELETE</button>
                                </form>
                            </div>
                          </div>
            

                    </div>
                <% } %>
            </div>

        </div>
    <footer>
        <%- include ('../partials/footer.ejs') %>
    </footer>
</body>
</html>