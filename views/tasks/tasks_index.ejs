<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <h1> tasks</h1>
    <a href="/tasks/new">new tasks</a>
        <div class="container">

            <div class="row">

                <% for(let i = 0; i < tasks.length; i++){ %>

                    <div class="col">
                        <h3><%= tasks[i].name %></h3>

                       
                        <h3>Complete: <%= tasks[i].completed %></h3>
                       
                        

                        <a href="/tasks/<%= tasks[i]._id %>/edit">EDIT</a>
                        <form action="/tasks/<%=tasks[i]._id%>?_method=DELETE" method="POST">
                            <input type="submit" value="DELETE"/>
                        </form>

                    </div>
                <% } %>
            </div>
        </div>
    <footer>
        <%- include ('../partials/footer.ejs') %>
    </footer>
</body>
</html>